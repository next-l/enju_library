<%= form_for(@request_type) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <% I18n.available_locales.each do |locale| %>
    <div class="field">
      <% display_name = "display_name_#{locale.to_s}" %>
      <%= f.label :display_name -%> (<%= locale.to_s %>)<br />
      <%= f.text_field display_name -%>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
