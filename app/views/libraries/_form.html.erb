<%= render 'page/required_field' %>
<%= simple_form_for(@library) do |f| -%>
  <%= f.error_messages -%>

  <div class="form-group">
    <%= f.label :name -%><br />
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :short_display_name -%><br />
    <%= f.text_area :short_display_name, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :display_name -%><br />
    <%= f.text_area :display_name, class: 'form-control' -%>
  </div>

  <% unless @library.web? %>
  <div class="form-group">
    <%= f.label :isil -%><br />
    <%= f.text_field :isil, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label t('activerecord.models.country') -%><br />
    <%= f.select(:country_id, @countries.collect{|c| [c.display_name, c.id]}, {}, {class: 'form-control col-sm-4'}) -%>
  </div>

  <div class="form-group">
    <%= f.label :zip_code -%><br />
    <%= f.text_field :zip_code, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :region -%><br />
    <%= f.text_area :region, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :locality -%><br />
    <%= f.text_area :locality, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :street -%><br />
    <%= f.text_area :street, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :latitude -%><br />
    <%= f.text_field :latitude, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :longitude -%><br />
    <%= f.text_field :longitude, class: 'form-control' -%>
  </div>

  <div class="field">
    <%= f.label :telephone_number_1 -%><br />
    <%= f.phone_field :telephone_number_1, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :telephone_number_2 -%><br />
    <%= f.phone_field :telephone_number_2, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :fax_number -%><br />
    <%= f.phone_field :fax_number, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :call_number_rows -%><br />
    <%= f.text_field :call_number_rows, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :call_number_delimiter -%><br />
    <%= f.text_field :call_number_delimiter, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :opening_hour -%><br />
    <%= f.text_area :opening_hour, class: 'form-control' -%>
  </div>

  <div class="form-group">
    <%= f.label :note -%><br />
    <%= f.text_area :note, class: 'form-control' -%>
  </div>
  <% end %>

  <div class="actions">
    <%= f.hidden_field :library_group_id %>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<%- end -%>
